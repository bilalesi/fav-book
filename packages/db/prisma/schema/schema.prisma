generator client {
  provider        = "prisma-client"
  output          = "../generated"
  moduleFormat    = "esm"
  runtime         = "bun"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  extensions = [pg_trgm]
}

generator zod {
  provider = "prisma-zod-generator"
  output   = "../generated/schemas"
}

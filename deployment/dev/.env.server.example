# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/bookmarks_dev

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3001

# Resend API Key for sending emails
RESEND_API_KEY=your-resend-api-key

# Email configuration
EMAIL_FROM=onboarding@resend.dev

# Twitter/X OAuth Configuration
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# Trigger.dev Configuration
TRIGGER_API_URL=http://localhost:8030
TRIGGER_API_KEY=your-trigger-api-key
TRIGGER_SECRET_KEY=your-trigger-secret-key
TRIGGER_PROJECT_ID=your-trigger-project-id

# AI Provider Configuration
# Choose which AI provider to use: "lmstudio" or "ollama" (default: ollama)
AI_PROVIDER=ollama

# LM Studio Configuration
LM_STUDIO_API_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=qwen_qwen3-4b-instruct-2507
LM_STUDIO_MAX_TOKENS=1000
LM_STUDIO_TEMPERATURE=0.7

# Ollama Configuration
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_MAX_TOKENS=1000
OLLAMA_TEMPERATURE=0.7

# AI Provider Validation Settings
AI_PROVIDER_VALIDATE_ON_STARTUP=true
AI_PROVIDER_STRICT_MODE=false

# Cobalt API Configuration
COBALT_API_URL=http://localhost:9002
COBALT_TIMEOUT=30000

# Feature Flags - Background Processing
ENABLE_AI_SUMMARIZATION=true
ENABLE_MEDIA_DOWNLOAD=true
MAX_MEDIA_SIZE_MB=500
MAX_SUMMARY_LENGTH=500
WORKFLOW_RETRY_ATTEMPTS=3
WORKFLOW_RETRY_DELAY_MS=5000

# Storage Configuration
MAX_STORAGE_GB=100

# Restate Configuration
RESTATE_RUNTIME_ENDPOINT=http://localhost:8080
RESTATE_ADMIN_ENDPOINT=http://localhost:9070

# Twitor Service Configuration
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_twitter_email
API_AUTH_TOKEN=your_api_auth_token
MAX_CONCURRENT_CRAWLS=5
BATCH_SIZE=100

# Valkey Configuration
VALKEY_URL=redis://localhost:6379/0
VALKEY_MAX_CONNECTIONS=10
VALKEY_MAX_MEMORY=256mb
VALKEY_MEMORY_LIMIT=512m

# Twitor Memory Limit
TWITOR_MEMORY_LIMIT=1g

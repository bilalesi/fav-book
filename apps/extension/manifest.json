{
    "manifest_version": 3,
    "name": "Social Bookmarks Manager",
    "version": "1.0.0",
    "description": "Save and manage your bookmarks from X (Twitter) and LinkedIn",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.linkedin.com/*"
    ],
    "background": {
        "service_worker": "background/service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ],
            "js": [
                "content/twitter.js"
            ],
            "css": [
                "content/styles.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "content/linkedin.js"
            ],
            "css": [
                "content/styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}
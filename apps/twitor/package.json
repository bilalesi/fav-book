{
    "name": "twitor",
    "version": "1.0.0",
    "private": true,
    "description": "Twitter bookmark crawler service",
    "scripts": {
        "dev": "./scripts/dev.sh",
        "build": "uv sync",
        "migrate": "./scripts/migrate.sh",
        "migrate:create": "./scripts/create-migration.sh",
        "test": "uv run pytest",
        "test:watch": "uv run pytest-watch",
        "check-types": "uv run mypy src/",
        "lint": "uv run ruff check src/",
        "format": "uv run ruff format src/"
    }
}
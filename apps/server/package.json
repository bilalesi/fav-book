{
  "name": "@favy/server",
  "main": "src/app.ts",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/types.ts"
    },
    "./api": {
      "default": "./src/api.ts"
    }
  },
  "scripts": {
    "check-types": "tsc -b",
    "build": "bun build --compile --minify --sourcemap ./src/index.ts --outfile dist/server",
    "dev": "bun run src/index.ts",
    "dev:hot": "bun run --hot src/index.ts",
    "dev:watch": "bun run --watch src/index.ts",
    "start": "bun run dist/index.js",
    "format": "biome check --write .",
    "format:fix": "biome format --write ."
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@favy/shared": "workspace:*",
    "@favy/db": "workspace:*",
    "@favy/workflow": "workspace:*",
    "@favy/auth": "workspace:*",
    "@orpc/client": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@prisma/client": "^6.19.0",
    "@trigger.dev/sdk": "4.1.0",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "elysia": "catalog:",
    "ky": "catalog:",
    "neverthrow": "catalog:",
    "p-map": "^7.0.4",
    "p-props": "^6.1.0",
    "radash": "^12.1.1",
    "ts-pattern": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@types/bun": "^1.2.6",
    "tsdown": "catalog:",
    "@biomejs/biome": "^2.3.7"
  }
}
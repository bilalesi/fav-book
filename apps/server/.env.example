BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3001

# Resend API Key for sending emails (get from https://resend.com)
RESEND_API_KEY=re_your_api_key_here

# Email configuration
EMAIL_FROM=Social Bookmarks <noreply@yourdomain.com>

# OAuth Providers
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Email Service (Resend)
RESEND_API_KEY=
EMAIL_FROM=Social Bookmarks <[email]>

# Database
DATABASE_URL=

# Feature Flags - Admin Access
# Comma-separated list of admin email addresses who can modify feature flags
ADMIN_EMAILS=admin@example.com,admin2@example.com

# Feature Flags - Background Processing
ENABLE_AI_SUMMARIZATION=true
ENABLE_MEDIA_DOWNLOAD=true
MAX_MEDIA_SIZE_MB=500
MAX_SUMMARY_LENGTH=500
WORKFLOW_RETRY_ATTEMPTS=3
WORKFLOW_RETRY_DELAY_MS=5000

# Trigger.dev Configuration
TRIGGER_API_URL=http://localhost:8030
TRIGGER_API_KEY=
TRIGGER_PROJECT_ID=

# AI Provider Configuration
# Choose which AI provider to use: "lmstudio" or "ollama" (default: lmstudio)
AI_PROVIDER=lmstudio

# LM Studio Configuration
# API URL for LM Studio server (default: http://localhost:1234/v1)
LM_STUDIO_API_URL=http://localhost:1234/v1
# Model to use for LM Studio (default: llama-3.2-3b-instruct)
LM_STUDIO_MODEL=llama-3.2-3b-instruct
# Maximum tokens for LM Studio responses (default: 1000)
LM_STUDIO_MAX_TOKENS=1000
# Temperature for LM Studio (0.0-2.0, default: 0.7)
LM_STUDIO_TEMPERATURE=0.7

# Ollama Configuration
# API URL for Ollama server (default: http://localhost:11434)
OLLAMA_API_URL=http://localhost:11434
# Model to use for Ollama (default: llama3.2:3b)
OLLAMA_MODEL=llama3.2:3b
# Maximum tokens for Ollama responses (default: 1000)
OLLAMA_MAX_TOKENS=1000
# Temperature for Ollama (0.0-2.0, default: 0.7)
OLLAMA_TEMPERATURE=0.7

# AI Provider Validation Settings
# Validate provider connection on startup (default: true)
AI_PROVIDER_VALIDATE_ON_STARTUP=true
# Fail if validation fails, otherwise log warning and continue (default: false)
AI_PROVIDER_STRICT_MODE=false

# Cobalt API Configuration
COBALT_API_URL=http://localhost:9002
COBALT_TIMEOUT=30000

# Storage Configuration
MAX_STORAGE_GB=100